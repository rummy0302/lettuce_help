<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="-10dp"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".VolunteerHomepage">

    <TextView
        android:id="@+id/fooddonation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="-40dp"
        android:fontFamily="sans-serif-condensed"
        android:text="What to donate?"
        android:textColor="#CC000000"
        android:textSize="23sp"
        android:textStyle="bold" />


    <WebView
        android:id="@+id/foodDonationWebView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:layout_marginBottom="-10000dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/contactUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="-10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Contact us"
        android:textColor="#CC000000"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contactUsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Donor, Media and General Enquiries\nEmail: enquiries@foodbank.sg\nWhatsapp +65 9855 4805\nVolunteers\nContact: volunteer@foodbank.sg\nWe are located at:\nThe Foodbank Singapore Ltd 218 Pandan Loop, XPACE Singapore, 128408"
        android:textColor="#CC000000"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mapBtn_Volunteer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/location"
            android:text="Map" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/homeBtn_Volunteer"
            android:layout_width="80dp"

            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/home"
            android:text="HOME" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settingsBtn_Volunteer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/settings"
            android:text="SETTINGS" />

    </LinearLayout>

</LinearLayout>
