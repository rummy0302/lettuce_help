<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--            <TextView-->
            <!--                android:id="@+id/RVBoxStatus"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:text="RVBoxStatus"-->
            <!--                android:textColor="@color/platinum"-->
            <!--                android:textSize="28dp"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/RVPC"-->
            <!--                tools:layout_editor_absoluteX="164dp" />-->

            <TextView
                android:id="@+id/RVPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="RVBoxPostalCode"
                android:textColor="@color/platinum"
                android:textSize="28dp"
                app:layout_constraintTop_toBottomOf="@+id/RVBoxAddress"
                tools:layout_editor_absoluteX="121dp" />

            <TextView
                android:id="@+id/RVBoxAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RVBoxAddress"
                android:textColor="@color/platinum"
                android:textSize="36dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="112dp" />

            <TextView
                android:id="@+id/RVStatusI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="RVStatusI"
                android:textColor="@color/platinum"
                android:textSize="60dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/RVBoxStatus"
                tools:layout_editor_absoluteX="33dp" />

            <ProgressBar
                android:id="@+id/RVBoxStatus"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="33dp"
                tools:layout_editor_absoluteY="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>